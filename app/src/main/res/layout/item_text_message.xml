<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/message_over_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/module_medium"
        android:layout_marginLeft="@dimen/module_medium"
        android:layout_marginRight="@dimen/module_medium"
        android:layout_marginStart="@dimen/module_medium"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|right|end">

            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/module_base_3"
                android:paddingEnd="@dimen/module_base_3"
                android:paddingLeft="@dimen/module_base_3"
                android:paddingRight="@dimen/module_base_3"
                android:paddingStart="@dimen/module_base_3"
                android:paddingTop="@dimen/module_base_3"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small_font"
                android:autoLink="web"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
